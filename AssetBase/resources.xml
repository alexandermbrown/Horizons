<resources>

	<shaders>
    
		<shader name="shader_instance">
			<glsl>./res/shaders/Instanced.glsl</glsl>
			<hlsl>./res/shaders/Instanced.hlsl</hlsl>
		</shader>
    
		<shader name="shader_label">
			<glsl>./res/shaders/Label.glsl</glsl>
			<hlsl>./res/shaders/Label.hlsl</hlsl>
		</shader>
    
		<shader name="shader_debug_physics">
			<glsl>./res/shaders/DebugPhysics.glsl</glsl>
			<hlsl>./res/shaders/DebugPhysics.hlsl</hlsl>
		</shader>

		<shader name="shader_terrain">
			<glsl>./res/shaders/Terrain.glsl</glsl>
			<hlsl>./res/shaders/Terrain.hlsl</hlsl>
		</shader>
    
	</shaders>

	<textures>

		<texture2d name="texture_default">
			<source>./res/textures/default.png</source>
			<min_filter>LINEAR</min_filter>
			<mag_filter>NEAREST</mag_filter>
			<wrap_s>REPEAT</wrap_s>
			<wrap_t>REPEAT</wrap_t>
		</texture2d>

		<texture2d name="texture_horizons_splash">
			<source>./res/textures/ui/horizons_splash.png</source>
			<min_filter>LINEAR</min_filter>
			<mag_filter>NEAREST</mag_filter>
			<wrap_s>CLAMP_TO_EDGE</wrap_s>
			<wrap_t>CLAMP_TO_EDGE</wrap_t>
		</texture2d>

		<texture2d name="texture_loading_spinner">
			<source>./res/textures/ui/loading_spinner.png</source>
			<min_filter>NEAREST</min_filter>
			<mag_filter>NEAREST</mag_filter>
			<wrap_s>CLAMP_TO_EDGE</wrap_s>
			<wrap_t>CLAMP_TO_EDGE</wrap_t>
		</texture2d>

		<texture2d name="texture_terrain_test">
			<source>./res/textures/terrain_test.png</source>
			<min_filter>NEAREST</min_filter>
			<mag_filter>NEAREST</mag_filter>
			<wrap_s>REPEAT</wrap_s>
			<wrap_t>REPEAT</wrap_t>
		</texture2d>

	</textures>
	
	<fonts>
		<font name="Lato-Regular">
			<source>./res/fonts/Lato/Lato-Regular.ttf</source>
			<glyph_width>64</glyph_width>
			<texture_width>2048</texture_width>
		</font>

		<font name="Lora-Regular">
			<source>./res/fonts/Lora/Lora-Regular.ttf</source>
			<glyph_width>64</glyph_width>
			<texture_width>2048</texture_width>
		</font>

		<font name="Tomorrow-Regular">
			<source>./res/fonts/Tomorrow/Tomorrow-Regular.ttf</source>
			<glyph_width>64</glyph_width>
			<texture_width>2048</texture_width>
		</font>
	</fonts>

	<texture_atlases>
		<texture_atlas name="atlas_test">
			<texture>texture_default</texture>
			<entries>
				<entry alias="test_small" x="0.1" y="0.0" width="0.7" height="1.0" />
			</entries>
		</texture_atlas>

		<texture_atlas name="atlas_terrain_earth">
			<texture>texture_terrain_test</texture>
			<entries>
				<entry alias="terrain_dirt" x="0.0" y="0.5" width="0.5" height="0.25" />
				<entry alias="terrain_grass" x="0.5" y="0.0" width="0.5" height="0.25" />
				<entry alias="terrain_stone" x="0.0" y="0.0" width="0.5" height="0.25" />
				<entry alias="terrain_sand" x="0.5" y="0.5" width="0.5" height="0.25" />
			</entries>
		</texture_atlas>
	</texture_atlases>
	

	<audio>
		<audio_file name="audio_wind">
			<source>./res/audio/wind.ogg</source>
		</audio_file>

		<audio_file name="audio_laser_splat1">
			<source>./res/audio/laser_splat1.ogg</source>
		</audio_file>

		<audio_file name="audio_ship_startup_spin">
			<source>./res/audio/ship_startup_spin.ogg</source>
		</audio_file>
	</audio>

	<locales>

		<locale name="en-us"><source>./res/locales/en-us/en-us.ini</source></locale>
		<locale name="test"><source>./res/locales/test/test.ini</source></locale>

	</locales>

</resources>